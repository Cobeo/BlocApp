@section scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="page-header">
    <h1>BlocService</h1>
</div>

<div class="row">

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Blocs</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: blocs">
                    <li>
                        <strong><span data-bind="text: Location"></span></strong>
                        <small><a href="#" data-bind="click: $parent.getBlocDetail">Details</a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>

    <!-- ko if:detail() -->

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Detail</h2>
            </div>
            <table class="table">
                <tr><td>CotationVermin</td><td data-bind="text: detail().CotationVermin"></td></tr>
                <tr><td>AcheivedDate</td><td data-bind="text: detail().AcheivedDate"></td></tr>
                <tr><td>NumberDone</td><td data-bind="text: detail().NumberDone"></td></tr>
                <tr><td>NumberFlashed</td><td data-bind="text: detail().NumberFlashed"></td></tr>
            </table>
        </div>
    </div>

    <!-- /ko -->

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Add Bloc</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addBloc">
                    <div class="form-group">
                        <label for="inputVermin" class="col-sm-2 control-label">Vermin</label>
                        <div class="col-sm-10">
                            <select data-bind="options:cotations, optionsText: 'Vermin', value: newBloc.Cotation"></select>
                        </div>
                    </div>

                    <div class="form-group" data-bind="with: newBloc">
                        <label for="inputAcheivedDate" class="col-sm-2 control-label">AcheivedDate</label>
                        <div class="col-sm-10">
                            <input type="datetime" class="form-control" id="inputAcheivedDate" data-bind="value:AcheivedDate" />
                        </div>

                        <label for="inputLocation" class="col-sm-2 control-label">Location</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputLocation" data-bind="value:Location" />
                        </div>

                        <label for="inputNumberDone" class="col-sm-2 control-label">NumberDone</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="inputNumberDone" data-bind="value:NumberDone" />
                        </div>

                        <label for="inputNumberFlashed" class="col-sm-2 control-label">NumberFlashed</label>
                        <div class="col-sm-10">
                            <input type="number" step="any" class="form-control" id="inputNumberFlashed" data-bind="value:NumberFlashed" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>